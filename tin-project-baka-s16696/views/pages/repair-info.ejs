<%- include('../header.ejs') %>
    <main>
        <h2>
            Szczegóły naprawy
        </h2>
        <form class="form" novalidate onsubmit="return validateForm();">  
        <label for="damage" class="bold-txt">Uszkodzenia: </label>
        <input type="text" name="damage" value="Uszkodzona chłodnica" id="damage" disabled />
        <span id="errorRepairDamage" class="errors-text"></span>

        <label for="date" class="bold-txt">Data naprawy: </label>
        <input type="text" name="date" value="2020-10-24" id="date" disabled />
        <span id="errorRepairDate" class="errors-text"></span>

        <label for="price" class="bold-txt">Koszt: <abbr title="required" aria-label="required">*</abbr></label>
        <input type="number" name="price" value="1760" id="price" disabled>
        <span id="errorRepairPrice" class="errors-text"></span>

        <label for="mechanicname" class="bold-txt">Nazwisko mechanika: </label>
        <input type="text" name="mechanicname" value="Kowalski" id="mechanicname" disabled />
        <span class="errors-text"></span>


        <label for="car" class="bold-txt">Pojazd (Rejestracja): </label>
        <input type="text" name="car" value="WY 13920" id="car" disabled />
        <span class="errors-text"></span>

        
    </form>
    <a href="/repair/edit/:1" class="list-actions-button-edit">Edytuj</a>  
    <h2>
        Mechanik:
    </h2>

    <table class="table-list">
        <thead>
            <tr>
                <th>Nazwisko</th>
                <th>Imie</th>
                <th>Doświadczenie</th>
            </tr>
        </thead>
        
    
        <tbody>
            <tr>
                <td>Kowalski</td>
                <td>Stefan</td>
                <td>Certyfikat AutoKasacja 2013</td>
            </tr>
        </tbody>
        </table>
        <br>
        <h2>
            Pojazd:
        </h2>
    
        <table class="table-list">
            <thead>
                <tr>
                    <th>Marka</th>
                    <th>Rejestracja</th>
                    <th>Przebieg</th>
                </tr>
            </thead>
            
        
            <tbody>
                <tr>
                    <td>Alfa Romeo</td>
                    <td>WY 13920</td>
                    <td>192564 km</td>
                </tr>
            </tbody>
            </table>
        <a href="/repair" class="list-actions-button-details form-buttons">Powrót</a>  


</main>
