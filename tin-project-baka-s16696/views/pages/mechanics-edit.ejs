<%- include('../header.ejs') %>
<script type="application/javascript" src="/js/validationEmpForm.js"></script>
<script type="application/javascript" src="/js/validationCommon.js"></script>
    <main>
        <h2><%= pageTitle %></h2>
        <form class="form" method="POST" action="<%=formAction%>" novalidate onsubmit="return validateForm();">      
        <label for="lastname">Nazwisko:<abbr title="required" aria-label="required">*</abbr></label>
        <input type="text" name="Nazwisko" value="<%= emp.Nazwisko %>" id="firstname" placeholder="2-60 znaków"/>
        <span id="errorLastName" class="errors-text"></span>

        <label for="firstname">Imie:<abbr title="required" aria-label="required">*</abbr></label>
        <input type="text" name="Imie" value="<%= emp.Imie %>" id="lastname" placeholder="2-60 znaków"/>
        <span id="errorFirstName" class="errors-text"></span>

        <label for="exp">Doświadczenie: </label>
        <input type="text" name="Doswiadczenie" value="<%= emp.Doswiadczenie %>" id="exp" placeholder="do 100 znaków"/>
        <span id="errorExp" class="errors-text"></span>

        <input type="hidden" name="id_mechanic" value="<%= emp.id_mechanic %>">


    <div class="form-buttons">
    <p id="errorsSummary" class="errors-text"></p>
    <input type="submit" value="Aktualizuj" class="form-button-submit"/>
    <a href="/mechanics" class="form-button-cancel">Anuluj</a>  
    </div>
</form>

</main>
<%- include('../footer.ejs') %>